@{
    ViewData["Title"] = "Build Your Burger";
}

<div class="text-center">
    <h1 class="display-4">Build Your Burger</h1>

    <form asp-controller="Home" asp-action="Order" method="post">
        <h3>Choose your ingredients:</h3>
        @foreach (var ingredient in ViewBag.Ingredients)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="selectedIngredientNames" value="@ingredient.Name" id="@ingredient.Name">
                <label class="form-check-label" for="@ingredient.Name">@ingredient.Name (@ingredient.Price.ToString("C"))</label>
            </div>
        }
        <br />
        <button type="submit" class="btn btn-primary">Order Burger</button>
    </form>
</div>