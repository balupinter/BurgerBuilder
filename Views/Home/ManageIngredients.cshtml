@model List<BurgerBuilderApp.Models.Ingredient>

@{
    ViewData["Title"] = "Manage Ingredients";
}

<h1>@ViewData["Title"]</h1>

<p>// TODO-CORE-5: Implement adding new ingredients. (e.g., a form to add new ingredient)</p>

<h2>Current Ingredients</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model)
        {
            <tr>
                <td>@ingredient.Name</td>
                <td>@ingredient.Price.ToString("C")</td>
                <td>
                    // TODO-CORE-5: Implement edit and delete functionality for each ingredient.
                    <a href="#" class="btn btn-sm btn-primary">Edit</a>
                    <a href="#" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
